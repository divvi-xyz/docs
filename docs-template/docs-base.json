{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Divvi Docs",
  "description": "Documentation for building with Divvi - a blockchain-based protocol that makes it easy to align incentives among participants in on-chain ecosystems.",
  "logo": {
    "light": "/images/divvi-light.svg",
    "dark": "/images/divvi-dark.svg"
  },
  "favicon": "/images/favicon.ico",
  "colors": {
    "primary": "#6D59FE",
    "light": "#6D59FE",
    "dark": "#6D59FE"
  },
  "theme": "mint",
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/divvi-xyz"
      },
      {
        "label": "Discord",
        "href": "https://discord.com/invite/EaxZDhMuDn"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.divvi.xyz/builders"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Divvi Protocol",
        "autogenerate": "protocol"
      },
      {
        "tab": "Mobile Framework",
        "groups": [
          {
            "group": "Overview",
            "pages": ["mobile-framework/overview"]
          },
          {
            "group": "Creating a new project",
            "autogenerate": "mobile-framework/divvi-mobile"
          },
          {
            "group": "Adding a backend protocol",
            "autogenerate": "mobile-framework/hooks"
          },
          {
            "group": "Publishing",
            "pages": [
              "mobile-framework/publishing/play-store",
              "mobile-framework/publishing/app-store",
              "mobile-framework/publishing/asset-requirements"
            ]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "discord": "https://discord.com/invite/EaxZDhMuDn",
      "x": "https://x.com/letsdivvi",
      "github": "https://github.com/divvi-xyz"
    }
  },
  "search": {
    "prompt": "Search Divvi docs..."
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/protocol"
    }
  ],
  "feedback": {
    "suggestEdit": true
  }
}
